<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Event</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #f4f4f4;
    }

    /* SIDEBAR */
    .sidebar {
      width: 250px;
      height: 100vh;
      background: #1e1e2f;
      color: #fff;
      position: fixed;
      left: 0;
      top: 0;
      padding-top: 20px;
    }

    .sidebar h2 {
      text-align: center;
      margin-bottom: 30px;
    }

    .sidebar a {
      display: block;
      padding: 15px;
      color: #fff;
      text-decoration: none;
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .sidebar a:hover {
      background: #35354a;
    }

    /* MAIN CONTENT */
    .main-content {
      margin-left: 250px;
      padding: 20px;
    }

    .topbar {
      background: #fff;
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .card {
      background: #fff;
      padding: 25px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      max-width: 600px;
      margin: 0 auto;
    }

    h2 {
      margin-bottom: 20px;
      color: #1e1e2f;
    }

    .sidebar h2{

       color: #fefefe;
    }

    label {
      display: block;
      margin-top: 15px;
      margin-bottom: 5px;
      font-weight: bold;
      color: #333;
    }

    input[type="text"], input[type="file"], textarea {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
      box-sizing: border-box;
      font-size: 14px;
    }

    textarea {
      resize: vertical;
      min-height: 100px;
    }

    button.button-success {
      margin-top: 20px;
      padding: 10px 20px;
      background: #1e1e2f;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
      transition: 0.2s;
    }

    button.button-success:hover {
      background: #35354a;
    }

    @media (max-width: 650px) {
      .main-content {
        margin-left: 0;
      }
      .sidebar {
        width: 100%;
        height: auto;
        position: relative;
      }
    }

  </style>
</head>

<body>

  <!-- SIDEBAR -->
  <div class="sidebar">
    <h2>Society</h2>
    <a href="/">Logout</a>
    <a href="/SocietyDashboard">Dashboard</a>
    <a href="/add-event">Add Event</a>
  </div>

  <!-- MAIN CONTENT -->
  <div class="main-content">

    <div class="topbar">
      <h2>Create New Event</h2>
    </div>

    <div class="card">
      <form action="/add-event" method="POST" enctype="multipart/form-data">

        <label>Event Title</label>
        <input type="text" name="title" required>

        <label>Description</label>
        <textarea name="description" required></textarea>

        <label>Upload Event Poster</label>
        <input type="file" name="poster" required>

        <button type="submit" class="button-success">Create Event</button>

      </form>
    </div>

  </div>

</body>
</html>
